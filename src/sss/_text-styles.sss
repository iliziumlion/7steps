.text-page
	font-weight: 400

	> *:not(:first-child)
		margin-top: 32px

	.attention
		background: url("../img/photos/!.png") left center no-repeat
		padding-left: 60px

	strong
		font-weight: bold

	h2, h3, h4, h5, h6
		font-weight: 300

		&:not(:first-child)
			margin-top: 40px

	h2
		font-size: 26px
		line-height: calc(32 / 26)
		margin-bottom: 40px

	h3
		font-size: 22px
		line-height: calc(28 / 22)

	h4
		font-size: 18px
		line-height: calc(28 / 18)

	h5, h6
		font-size: rem(16)
		line-height: calc(24 / 16)

	blockquote, .hint_text
		background: var(--secondColor)
		padding: 30px 40px

		i
			display: block
			background: #fff
			margin: -30px -40px
			padding: inherit

	[align="right"], .b-content-image__right
		float: right
		margin-left: 44px

	[align="left"], .b-content-image__left
		float: left
		margin-right: 44px

	img[height]
		height: auto

	[align], .b-content-image__left,
	.b-content-image__right
		margin-bottom: 35px

	table
		font-size: 14px

		thead

			th, td
				background: #ececec

		td, th
			padding: 15px
			font-weight: inherit

			&:not([valign]), &[valign="middle"]
				vertical-align: middle

			&[valign="top"]
				vertical-align: top

			&[valign="bottom"]
				vertical-align: bottom

		td
			transition background .3s ease

		&[cellspacing]:not([cellspacing="1"]):not([cellspacing="0"])

	table[border="1"], table.styled_table
		min-width: 100%

		td, th
			border: 1px solid #e7e7e7

		tr

			&:hover

				td
					background: #edf1e0

	li

		&:not(:first-child)
			margin: 3px 0 0

		&:before
			display: inline-block

		ul, ol
			margin-bottom: 20px
			margin-top: 0

		li
			padding-left: 10px

			&:before
				margin-right: 10px !important

			&:not(:first-child)
				margin-top: 5px

	ul

		&.content_ul, &:not([class])

			> li
				padding-left: 25px

				&:before
					content: ""
					margin: 0 16px 2px -22px
					display: inline-block
					border-radius: 50%
					background: var(--mainColor)
					size: 6px

		> li

			li
				padding-left: 30px

		&[class]:not(.content_ul)

			> li
				position: relative
				padding-left: 32px

				&:before
					content: ""
					display: inline-block
					margin: 0 20px 0 -32px
					size: width("../img/ico-pentagon-red.png") height("../img/ico-pentagon-red.png")

		&[class='star_ul']

			> li

				&:nth-child(5n + 5), &:first-child

					&:before
						background: url("../img/ico-pentagon-red.png") no-repeat
	
				&:nth-child(5n - 4):not(:first-child), &:nth-child(2)

					&:before
						background: url("../img/ico-pentagon-gray.png") no-repeat

				&:nth-child(5n - 2)

					&:before
						background: url("../img/ico-pentagon-blackgray.png") no-repeat

				&:nth-child(5n - 1)

					&:before
						background: url("../img/ico-pentagon-green.png") no-repeat

		&.red-star_ul

			> li

				&:before
					background: url("../img/ico-pentagon-red.png") no-repeat

		&.gray-star_ul

			> li

				&:before
					background: url("../img/ico-pentagon-gray.png") no-repeat

		&.lblue-star_ul

			> li

				&:before
					background: url("../img/ico-pentagon-blackgray.png") no-repeat

		&.green-star_ul

			> li

				&:before
					background: url("../img/ico-pentagon-green.png") no-repeat

	ol
		counter-reset: i

		> li
			counter-increment: i
			font-weight: bold
			padding-left: 18px

			&:before
				content: counter(i) "."
				margin: 0 8px 0 -18px

			li
				font-weight: 300
				margin: 23px 0 0 !important

		ul

			> li
				padding-left: 14px

				&:before
					content: "â€“" !important
					background: none !important
					border-radius: 0 !important
					size: auto !important
					margin: 0 7px 0 -14px

		&.styled_ol

			> li
				padding-left: 60px
				font-weight: 400

				&:not(:first-child)
					margin: 26px 0 0

				&:before
					display: inline-block
					content: counter(i) !important
					color: #fff
					padding: 5px 5px 7px 
					margin: 0 20px 0 -60px
					text-align: center
					width: 40px

				&:nth-child(4n - 4), &:first-child
					
					&:before
						background: #9f9f9f

				&:nth-child(4n - 6)

					&:before
						background: #595959

				&:nth-child(4n - 1)

					&:before
						background: var(--mainColor)

@media screen and (max-width: 1600px)
	.text-page

		h2
			margin-bottom: 30px

		> *

			&:not(:first-child)
				margin-top: 20px

		[align], .b-content-image__left,
		.b-content-image__right
			margin-bottom: 20px

		[align="left"], .b-content-image__left
			margin-right: 16px

		[align="right"],
		.b-content-image__right
			margin-left: 16px

@media screen and (max-width: 1000px)
	.text-page
		font-size: 14px

		> *:not(:first-child)
			margin-top: 18px

@media screen and (max-width: 660px)
	.text-page
		
		> *:not(:first-child)
			margin-top: rem(16)

		h2
			font-size: 17px
			margin-bottom: 22px

		h3
			font-size: 16px

		h4
			font-size: 15px

		h5, h6
			font-size: 14px

		blockquote, .hint_text
			padding: 20px

			> i
				margin: -20px


		[align], .b-content-image__left,
		.b-content-image__right
			margin-left: 0
			float: none
			margin-right: 0

			img
				width: 100%

		ul

			&[class]

				> li
					padding-left: 20px

					&:before
						margin: 0 8px 0 -20px

			&:not([class])

				> li
					padding-left: 20px

					&:before
						margin: 0 19px 0px -18px

		ol

			> li

				li
					margin: 17px 0 0 !important

		h2, h3, h4, h5, h6

			&:not(:first-child)
				margin-top: 25px