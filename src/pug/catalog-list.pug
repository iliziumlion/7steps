														if (j != 1)
															if (i == 1)
																.cat-item__sale Супер цена
															else
																.cat-item__sale 25%
														a.cat-item__img(href="#")
															img(src="img/photos/mc-img-"+i+".jpg")
														.cat-item__desc
															.cat-item__desc-labels
																.cat-labels
																	.cat-labels__label.cat-labels__label--red Акция 10.06 / 10.07
																	if ( i == 1)
																		.cat-labels__label.cat-labels__label--yelow Не во всех магазинах
															a.cat-item__title(href="#")=item
															.cat-item__volume 300 мл
															.cat-item__buy
																.cat-buy
																	.cat-buy__price
																		.cat-buy__price-curprice
																			.price 22.
																				span 99 
																				i.rub ₽
